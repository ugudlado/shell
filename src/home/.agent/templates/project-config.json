{
  "obsidian": {
    "vault_name": "cursor",
    "personal_knowledge_path": "topics",
    "monthly_log_path": "personal",
    "templates_path": "templates",
    "daily_log_enabled": true,
    "feature_docs_required": true,
    "knowledge_base_enabled": true
  },
  "templates": {
    "obsidian_templates": {
      "prd_template": "templates/prd-template.md",
      "daily_log_template": "templates/daily-log-template.md",
